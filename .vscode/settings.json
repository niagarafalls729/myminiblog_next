{
  "eslint.validate": ["jsx", "js", "tsx", "html", "javascript"],
  "eslint.alwaysShowStatus": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "files.exclude": {
    "/.next/**": true,
    "/node_modules/**": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode"
}
